{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      // Legacy paths for backward compatibility
      "@/components/*": ["./src/presentation/components/*"],
      "@/lib/*": ["./src/shared/*"],
      "@/lib/context/*": ["./src/presentation/context/*"],
      "@/lib/solana/*": ["./src/infrastructure/blockchain/solana/*"],
      "@/lib/utils/*": ["./src/shared/utils/*"],
      "@/lib/types/*": ["./src/shared/types/*"],
      "@/app/*": ["./src/app/*"],
      "@/core/*": ["./src/core/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/application/*": ["./src/application/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/shared/*": ["./src/shared/*"],
      // New primary paths
      "@/src/*": ["./src/*"],
      "@/src/app/*": ["./src/app/*"],
      "@/src/core/*": ["./src/core/*"],
      "@/src/infrastructure/*": ["./src/infrastructure/*"],
      "@/src/application/*": ["./src/application/*"],
      "@/src/presentation/*": ["./src/presentation/*"],
      "@/src/shared/*": ["./src/shared/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}